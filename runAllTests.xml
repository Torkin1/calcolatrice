 <?eclipse.ant.import?>
 
 <project>
    <target name="test" >
        <mkdir dir="junit"/>
        <junit printsummary="yes" haltonfailure="yes">
            <classpath refid="calcolatrice.classpath"/>
            <formatter type="xml"/>
            <batchtest fork="yes" todir="junit">
                <fileset dir="bin/test">
                    <include name="**/*Test*.java"/>
                </fileset>
            </batchtest>
            <formatter type="xml"/>
        </junit>
    </target>
</project>
