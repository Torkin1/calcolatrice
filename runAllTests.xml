 <?eclipse.ant.import?>
 
 <project>
    <target name="test" >
        <mkdir dir="${junit.output.dir}"/>
        <junit printsummary="yes" haltonfailure="yes">
            <formatter type="xml"/>
            <batchtest fork="yes" todir="${junit.output.dir}">
                <fileset dir="bin/test">
                <include name="**/*Test*.java"/>
                </fileset>
            </batchtest>
        </junit>
        <antcall target="junitreport"/>
    </target>
</project>
