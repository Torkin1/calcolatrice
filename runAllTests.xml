 <?eclipse.ant.import?>
 
 <project>
    <target name="test" >
        <mkdir dir="${junit.output.dir}"/>
        <junit printsummary="yes" haltonfailure="yes">
            <classpath refid="calcolatrice.classpath"/>
            <formatter type="xml"/>
            <batchtest fork="yes" todir="${junit.output.dir}">
                <fileset dir="bin">
                    <include name="test/**/*.class"/>
                </fileset>
            </batchtest>
            <formatter type="xml"/>
        </junit>
    </target>
</project>
