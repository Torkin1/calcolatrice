 <?eclipse.ant.import?>
 
 <project>
 
    <target name="test" >

        <mkdir dir="${junit.output.dir}"/>

        <junit printsummary="yes" haltonfailure="yes">
            <classpath refid="calcolatrice.classpath"/>
            <formatter type="xml"/>
            <jvmarg line="-ea"/>
            <batchtest fork="yes" todir="${junit.output.dir}">
                <fileset dir="src/test">
                <include name="**/*Test*.java"/>
                </fileset>
            </batchtest>

        </junit>
        
    </target>
</project>
